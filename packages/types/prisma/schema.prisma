
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Menu {
  id          String   @id @default(cuid())
  menu_id    String?  
  name        String
  depth       Int
  order       Int    
  root_id   String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  parent    Menu?   @relation("MenuToParent", fields: [root_id], references: [id], onDelete: Cascade)
  children  Menu[]  @relation("MenuToParent")

  @@index([root_id])
}
